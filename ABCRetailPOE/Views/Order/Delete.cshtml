@model ABCRetail.Models.OrderEntity

<h2>Delete Order</h2>
<div>
    <h4>Are you sure you want to delete this order?</h4>
    <dl class="row">
        <dt class="col-sm-2">Customer</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>

        <dt class="col-sm-2">Product</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>


    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="RowKey" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="/Order" class="btn btn-secondary">Cancel</a>
    </form>
</div>
