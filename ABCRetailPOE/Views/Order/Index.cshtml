@model IEnumerable<ABCRetail.Models.OrderEntity>

<div class="container mt-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
        <h2 class="fw-bold text-gradient">Orders Management</h2>
        <a class="btn btn-success shadow-sm px-4 rounded-pill" href="/Order/Create">
            <i class="bi bi-plus-circle me-1"></i> New Order
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var o in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="card shadow-sm border rounded-4 h-100 order-card">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">@o.CustomerName</h5>
                            <p class="card-text text-muted mb-1"><strong>Product:</strong> @o.ProductName</p>
                            <p class="card-text text-muted mb-1"><strong>Quantity:</strong> <span class="badge bg-light text-dark px-3 py-2 rounded-pill">@o.Quantity</span></p>
                            <p class="card-text text-muted mb-3"><strong>Order Date:</strong> @o.OrderDate.ToString("yyyy-MM-dd")</p>

                            <div class="mt-auto d-flex justify-content-between">
                                <a class="btn btn-sm btn-outline-info rounded-pill px-3 shadow-sm" href="/Order/Details/@o.RowKey">
                                    <i class="bi bi-eye"></i> View
                                </a>
                                <a class="btn btn-sm btn-outline-warning rounded-pill px-3 shadow-sm" href="/Order/Edit/@o.RowKey">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-sm btn-outline-danger rounded-pill px-3 shadow-sm" href="/Order/Delete/@o.RowKey"
                                   onclick="return confirm('Are you sure you want to delete this order?');">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-4 shadow-sm rounded-3 text-center">
            <i class="bi bi-inbox fs-3 d-block mb-2"></i>
            No orders found. Click <b>New Order</b> to create one.
        </div>
    }
</div>

<!-- Styling -->
<style>
    /* Gradient title */
    .text-gradient {
        background: linear-gradient(90deg, #0d6efd, #20c997);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Order Card */
    .order-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .order-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

    /* Buttons */
    .btn {
        transition: all 0.2s ease;
    }

        .btn:hover {
            transform: scale(1.05);
        }
</style>
