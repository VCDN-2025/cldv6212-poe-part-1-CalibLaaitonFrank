@{
    ViewData["Title"] = "Home Page";
}

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm sticky-top">
    <div class="container">
        <a class="navbar-brand fw-bold text-gradient fs-4" href="/">ABC Retail</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav fw-semibold">
                <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="/Customer/Index">Customers</a></li>
                <li class="nav-item"><a class="nav-link" href="/Products/Index">Products</a></li>
                <li class="nav-item"><a class="nav-link" href="/Order/Index">Orders</a></li>
                <li class="nav-item"><a class="nav-link" href="/Contracts/Index">Contracts</a></li>
            </ul>
        </div>
    </div>
</nav>

<div class="container-fluid p-0">
    <!-- Hero Section -->
    <section class="hero-section d-flex align-items-center justify-content-center text-white text-center">
        <div class="overlay p-5 rounded-4 animate__animated animate__fadeIn">
            <h1 class="display-3 fw-bold mb-3 animate__animated animate__fadeInDown">
                Welcome to <span class="text-gradient">ABC Retail</span>
            </h1>
            <p class="lead mb-0 animate__animated animate__fadeInUp animate__delay-1s">
                Your premium dashboard for managing <strong>gaming products, toys, and collectibles</strong>.
            </p>
        </div>
    </section>

    <!-- Dashboard Cards -->
    <div class="container py-5">
        <div class="row g-4">
            <!-- Customers Card -->
            <div class="col-md-4">
                <div class="card h-100 shadow-lg border-0 hover-scale rounded-4 animate__animated animate__fadeInUp">
                    <div class="card-body text-center p-4">
                        <div class="icon-wrapper bg-primary bg-opacity-10 text-primary mb-3 mx-auto">
                            <i class="bi bi-people-fill fs-1"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3">Customers</h5>
                        <p class="card-text text-muted">View, add, edit, or delete customers. Track loyalty levels and maintain detailed profiles.</p>
                        <a href="/Customer/Index" class="btn btn-primary rounded-pill px-4">Manage Customers</a>
                    </div>
                </div>
            </div>

            <!-- Products Card -->
            <div class="col-md-4">
                <div class="card h-100 shadow-lg border-0 hover-scale rounded-4 animate__animated animate__fadeInUp animate__delay-1s">
                    <div class="card-body text-center p-4">
                        <div class="icon-wrapper bg-success bg-opacity-10 text-success mb-3 mx-auto">
                            <i class="bi bi-controller fs-1"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3">Products</h5>
                        <p class="card-text text-muted">Easily manage consoles, accessories, toys, and collectibles with stock updates and image uploads.</p>
                        <a href="/Products/Index" class="btn btn-success rounded-pill px-4">Manage Products</a>
                    </div>
                </div>
            </div>

            <!-- Orders Card -->
            <div class="col-md-4">
                <div class="card h-100 shadow-lg border-0 hover-scale rounded-4 animate__animated animate__fadeInUp animate__delay-2s">
                    <div class="card-body text-center p-4">
                        <div class="icon-wrapper bg-warning bg-opacity-10 text-warning mb-3 mx-auto">
                            <i class="bi bi-bag-fill fs-1"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3">Orders</h5>
                        <p class="card-text text-muted">Track and process customer orders in real-time. Monitor quantities, pricing, and order statuses seamlessly.</p>
                        <a href="/Order/Index" class="btn btn-warning text-white rounded-pill px-4">View Orders</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<footer class="footer bg-dark text-white pt-4 mt-auto">
    <div class="container text-center">
        <div class="row">
            <div class="col-md-6 mb-3 mb-md-0">
                <h5 class="fw-bold text-gradient">ABC Retail</h5>
                <p class="small text-muted">Delivering the best in gaming, toys, and collectibles management.</p>
            </div>
            <div class="col-md-6">
                <h6 class="fw-bold">Quick Links</h6>
                <ul class="list-unstyled small">
                    <li><a href="/Customer/Index" class="text-decoration-none text-white-50">Customers</a></li>
                    <li><a href="/Products/Index" class="text-decoration-none text-white-50">Products</a></li>
                    <li><a href="/Order/Index" class="text-decoration-none text-white-50">Orders</a></li>
                </ul>
            </div>
        </div>
        <hr class="border-secondary my-3">
        <p class="small mb-0">&copy; @DateTime.Now.Year ABC Retail. All rights reserved.</p>
    </div>
</footer>

<!-- Custom Styles -->
<style>
    /* Hero Section */
    .hero-section {
        background: url('/images/gaming-hero.jpg') no-repeat center center/cover;
        height: 80vh;
        position: relative;
    }

        .hero-section .overlay {
            background: rgba(0, 0, 0, 0.65);
            backdrop-filter: blur(8px);
            max-width: 780px;
        }

    .text-gradient {
        background: linear-gradient(90deg, #00c6ff, #0072ff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Cards */
    .icon-wrapper {
        width: 80px;
        height: 80px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
    }

    /* Hover Animation */
    .hover-scale {
        transition: transform 0.35s ease, box-shadow 0.35s ease;
    }

        .hover-scale:hover {
            transform: translateY(-10px) scale(1.04);
            box-shadow: 0 14px 32px rgba(0, 0, 0, 0.3);
        }

    /* Footer */
    .footer {
        background: #111;
    }

        .footer a:hover {
            color: #00c6ff !important;
        }
</style>


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
