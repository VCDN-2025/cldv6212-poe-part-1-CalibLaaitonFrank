@model List<ABCRetail.Models.CustomerEntity>
@{
    ViewData["Title"] = "Customer Management";
}

<div class="container mt-5">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
        <h2 class="fw-bold text-gradient">Customer Directory</h2>
        <a class="btn btn-success shadow-sm px-4 rounded-pill" href="/Customer/Create">
            <i class="bi bi-person-plus-fill me-1"></i> Add New Customer
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var c in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="card shadow-sm border rounded-4 h-100 customer-card">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold">@c.FullName</h5>
                            <p class="card-text text-muted mb-1"><strong>Email:</strong> <a href="mailto:@c.Email" class="text-decoration-none">@c.Email</a></p>
                            <p class="card-text text-muted mb-1"><strong>Phone:</strong> @c.Phone</p>
                            <p class="card-text text-muted mb-2"><strong>City:</strong> @c.City</p>
                            <p class="mb-3">
                                @switch (c.LoyaltyTier?.ToLower())
                                {
                                    case "gold":
                                        <span class="badge bg-warning text-dark px-3 py-2 rounded-pill">Gold</span>
                                        break;
                                    case "silver":
                                        <span class="badge bg-secondary px-3 py-2 rounded-pill">Silver</span>
                                        break;
                                    case "bronze":
                                        <span class="badge bg-danger px-3 py-2 rounded-pill">Bronze</span>
                                        break;
                                    default:
                                        <span class="badge bg-info text-dark px-3 py-2 rounded-pill">@c.LoyaltyTier</span>
                                        break;
                                }
                            </p>
                            <div class="mt-auto d-flex justify-content-between">
                                <a class="btn btn-sm btn-outline-primary rounded-pill px-3 shadow-sm"
                                   href="/Customer/Edit?rowKey=@c.RowKey&partitionKey=@c.PartitionKey">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-sm btn-outline-danger rounded-pill px-3 shadow-sm"
                                   href="/Customer/Delete?rowKey=@c.RowKey&partitionKey=@c.PartitionKey"
                                   onclick="return confirm('Are you sure you want to delete this customer?');">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning mt-4 shadow-sm rounded-3" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> No customers found.
            <a href="/Customer/Create" class="alert-link fw-bold">Add a new customer</a>.
        </div>
    }
</div>

<!-- Styling -->
<style>
    /* Gradient Heading */
    .text-gradient {
        background: linear-gradient(90deg, #0d6efd, #20c997);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Card Hover Effect */
    .customer-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .customer-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        }

    /* Button Hover */
    .btn {
        transition: all 0.2s ease;
    }

        .btn:hover {
            transform: scale(1.05);
        }
</style>
