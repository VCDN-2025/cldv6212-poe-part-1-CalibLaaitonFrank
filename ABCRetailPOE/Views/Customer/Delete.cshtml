@model ABCRetail.Models.CustomerEntity
@{
    ViewData["Title"] = "Delete Customer";
}

<h2>Delete Customer</h2>

<h4>Are you sure you want to delete this customer?</h4>

<div class="border p-3 mb-3">
    <p><strong>Full Name:</strong> @Model.FullName</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Phone:</strong> @Model.Phone</p>
    <p><strong>City:</strong> @Model.City</p>
    <p><strong>Loyalty Tier:</strong> @Model.LoyaltyTier</p>
</div>

<form method="post">
    <button class="btn btn-danger" type="submit">Delete</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>
