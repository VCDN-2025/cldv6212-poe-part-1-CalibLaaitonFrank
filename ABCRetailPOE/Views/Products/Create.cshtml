@model ABCRetail.Models.ProductEntity
<h2>New Car Product</h2>
<form method="post" enctype="multipart/form-data">
    <div class="mb-2"><label>SKU</label><input class="form-control" asp-for="Sku" /></div>
    <div class="mb-2"><label>Name</label><input class="form-control" asp-for="Name" /></div>
    <div class="mb-2"><label>Brand</label><input class="form-control" asp-for="Brand" /></div>
    <div class="mb-2"><label>Category</label><input class="form-control" asp-for="Category" /></div>
    <div class="mb-2"><label>Price</label><input class="form-control" asp-for="Price" type="number" step="0.01" /></div>
    <div class="mb-2"><label>Stock</label><input class="form-control" asp-for="Stock" type="number" /></div>
    <div class="mb-2"><label>Image</label><input class="form-control" type="file" name="imageFile" accept="image/*" /></div>
    <button class="btn btn-success" type="submit">Save</button>
</form>
